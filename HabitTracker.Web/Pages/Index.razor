@page "/"

<PageTitle>HabitTracker</PageTitle>

<h1>HabitTracker</h1>

<div class="calendar-div-main">

    <DaySelector currentWeek="true" Refresh="Refresh"></DaySelector>
    <DaySelector currentWeek="false" Refresh="Refresh"></DaySelector>
    <DaySelector currentWeek="false" Refresh="Refresh"></DaySelector>
    <DaySelector currentWeek="false" Refresh="Refresh"></DaySelector>
</div>

<div class="buttons-carousel">

    <img src="/images/settings-outline.svg" class="@state" @onclick="Active"/>
    <ListType listTitle="All"></ListType>
</div>

<div class="content">
    <HabitListDisplay settings="@habitSettings"></HabitListDisplay>
    
</div>

@code {
    public string state = "off";
    public bool habitSettings = false;


    public async Task Refresh()
    {
        StateHasChanged();    
    }



    public void Active()
    {
        if(state == "off")
        {
            state = "on";
            habitSettings = true;
        }
        else
        {
            state = "off";
            habitSettings = false;
        }
    }
}